                                            <VBox.margin>
                                                <Insets top="10.0"/>
                                            </VBox.margin>
                                            <font>
                                                <Font name="MS Reference Sans Serif" size="14.0"/>
                                            </font>
                                        </Text>
                                        <JFXTextField fx:id="roomNum" onKeyReleased="#validateButton"
                                                      promptText="Ex. &quot;201&quot;"
                                                      style="-fx-background-color: #E5E5E5; -fx-background-radius: 7;"
