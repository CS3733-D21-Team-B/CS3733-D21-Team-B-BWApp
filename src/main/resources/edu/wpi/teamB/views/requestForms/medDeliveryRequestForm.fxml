                                                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <JFXButton id="btnHelp" fx:id="btnHelp" buttonType="RAISED"
                                                                   onAction="#handleButtonAction"
                                                                   style="-fx-background-color: #9A9999; -fx-background-radius: 50%;"
                                                                   text="?" textFill="WHITE">
