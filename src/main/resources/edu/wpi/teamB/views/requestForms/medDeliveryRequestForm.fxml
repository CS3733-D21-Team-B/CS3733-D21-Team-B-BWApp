                                <Text fill="#0067b1" strokeType="OUTSIDE" strokeWidth="0.0"
                                      text="Medicine Delivery Service Request">
                                    <font>
                                        <Font name="MS Reference Sans Serif" size="24.0"/>
                                    </font>
                                </Text>
                                <VBox>
                                    <VBox.margin>
                                        <Insets top="10.0"/>
                                    </VBox.margin>
