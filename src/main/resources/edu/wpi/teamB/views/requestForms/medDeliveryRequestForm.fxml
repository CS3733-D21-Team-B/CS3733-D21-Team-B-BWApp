                                                     style="-fx-background-color: #E5E5E5; -fx-background-radius: 7;"
                                                     unFocusColor="#f0f0f000">
                                            <VBox.margin>
                                                <Insets bottom="10.0"/>
                                            </VBox.margin>
                                        </JFXTextArea>
                                        <HBox>
                                            <children>
                                                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
